<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaComprasNova">

        <activity
            android:name="com.example.listacomprasnova.ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ListaComprasNova">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.CadastroActivity"
            android:exported="false"
            android:parentActivityName=".ui.LoginActivity"
            android:theme="@style/Theme.ListaComprasNova" />

        <activity
            android:name=".ui.ListaActivity"
            android:exported="false"
            android:parentActivityName=".ui.LoginActivity"
            android:theme="@style/Theme.ListaComprasNova" />

        <activity
            android:name=".ui.ItensActivity"
            android:exported="false"
            android:parentActivityName=".ui.ListaActivity"
            android:theme="@style/Theme.ListaComprasNova" />

    </application>
</manifest>